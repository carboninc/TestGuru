<%= form_with model: [:admin, @badge], local: true, class: 'col-md-4' do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :badge_name, class: 'form-control', placeholder: 'Введите название награды' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.text_field :image, id: :badge_image, class: 'form-control' %>
    <span class="text-muted"><b>Доступные варианты:</b></span>
    <span class="badge badge-pill badge-primary">First</span>
    <span class="badge badge-pill badge-primary">Level</span>
    <span class="badge badge-pill badge-primary">Category</span>
  </div>

  <div class="form-group">
    <%= form.label :rule %>
    <%= form.select :rule, Badge.rules.keys.map { |w| [w.humanize, w] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.submit 'Создать награду', class: 'btn btn-success' %>
  </div>
<% end %>
