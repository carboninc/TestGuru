<%= form_with model: [:admin, @test], local: true, class: 'col-md-4' do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title, class: 'form-control', placeholder: 'Введите название теста' %>
  </div>

  <div class="form-group">
    <%= form.label :level %>
    <%= form.number_field :level, id: :test_level, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :timer %>
    <%= form.number_field :timer, id: :test_timer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Создать тест', class: 'btn btn-success' %>
  </div>
<% end %>
