<div class="container">
  <div class="row">
    <%= form_with model: @feedback, local: true do |form| %>
      <div class="form-group">
        <%= render 'shared/errors', resource: @feedback %> 
             
        <div>
          <%= form.label :email %>
          <%= form.text_field :email, id: :feedback_email, class: 'form-control' %>
        </div>

        <div>
          <%= form.label :message %>
          <%= form.text_area :message, id: :feedback_message, rows: 5, class: 'form-control' %>
        </div>
        
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
