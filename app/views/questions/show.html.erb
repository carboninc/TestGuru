<h1>Вопрос к тесту <%= @question.test.title %></h1>

<table>
  <tr>
    <th>ID</th>
    <th>Вопрос</th>
    <th>Тест</th>
    <th colspan="3">Действия</th>
  </tr>

  <tr>
    <td><%= @question.id %></td>
    <td><%= @question.body %></td>
    <td><%= @question.test.title %></td>
    <td><%= link_to 'Редактировать', edit_question_path %></td>
    <td><%= link_to 'Удалить', question_path(@question), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
</table>

<h2>Ответы:</h2>

<%= link_to 'Новый ответ', new_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Назад', admin_test_path(@question.test) %>
