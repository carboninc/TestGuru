<h1><%= t('.header', title: @test_passage.test.title) %></h1>

<p>
  <b><%= @test_passage.current_question.body %></b>
</p>

<p>
  <%= t('.test_progress', current_question: @test_passage.num_of_current_question, count: @test_passage.test.questions.count) %>
</p>

<%= content_tag :div, class: 'progress mb-4', data: { current_progress: @test_passage.num_of_current_question - 1, common_progress: @test_passage.test.questions.count } do %> 
  <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
    0%
  </div>
<% end %>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :title, include_hidden: false do |b| %>
    <div>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </div>
  <% end %>

  <div>
    <p><%= link_to 'Сохранить вопрос в Gist', gist_test_passage_path(@test_passage), method: :post %></p>
    <p><%= form.submit t('.next') %></p>
  </div>
<% end %>